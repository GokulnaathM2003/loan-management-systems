package com.bank.paymentservice.repository;

import com.bank.paymentservice.model.ForeclosureRequest;
import org.springframework.data.jpa.repository.JpaRepository;

import java.util.Optional;

public interface ForeclosureRequestRepository
        extends JpaRepository<ForeclosureRequest, Long> {

    // ✅ REQUIRED for duplicate check
    Optional<ForeclosureRequest> findByLoanIdAndStatus(
            Long loanId,
            String status
    );

    // (Optional) latest request – keep if you want
    Optional<ForeclosureRequest> findTopByLoanIdOrderByRequestDateDesc(
            Long loanId
    );
}
