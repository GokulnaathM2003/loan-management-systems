package com.example.lms_loan_service.service;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.example.lms_loan_service.client.PaymentServiceClient;
import com.example.lms_loan_service.model.ForeclosureStatus;
import com.example.lms_loan_service.model.Loan;
import com.example.lms_loan_service.model.LoanStatus;
import com.example.lms_loan_service.repository.LoanRepository;

@Service
public class ForeclosureApprovalService {

    private final LoanRepository loanRepository;
    private final PaymentServiceClient paymentServiceClient;

    public ForeclosureApprovalService(
            LoanRepository loanRepository,
            PaymentServiceClient paymentServiceClient) {
        this.loanRepository = loanRepository;
        this.paymentServiceClient = paymentServiceClient;
    }

    @Transactional
    public Double approveForeclosure(Long loanId) {

        Loan loan = loanRepository.findById(loanId)
                .orElseThrow(() -> new RuntimeException("Loan not found"));

        if (loan.getStatus() != LoanStatus.ACTIVE) {
            throw new RuntimeException("Loan is not active");
        }

        if (loan.getForeclosureStatus() != ForeclosureStatus.REQUESTED) {
            throw new RuntimeException("Foreclosure not requested for this loan");
        }

        loan.setForeclosureStatus(ForeclosureStatus.APPROVED);
        loanRepository.save(loan);

        Double approvedAmount = loan.getRemainingPrincipal();

        // âœ… THIS WILL COMPILE NOW
        paymentServiceClient.updateApprovedAmount(loanId, approvedAmount);

        return approvedAmount;
    }
}
