package com.example.lms_loan_service.controller;

import java.util.List;

import org.springframework.security.core.Authentication;
import org.springframework.security.oauth2.jwt.Jwt;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.lms_loan_service.dto.LoanResponseDto;
import com.example.lms_loan_service.service.LoanService;

@RestController
@RequestMapping("/loans")
public class LoanController {

    private final LoanService loanService;

    public LoanController(LoanService loanService) {
        this.loanService = loanService;
    }

    // ================= USER =================
    @GetMapping("/my")
    public List<LoanResponseDto> getMyLoans(Authentication authentication) {

        Jwt jwt = (Jwt) authentication.getPrincipal();
        Long customerId = jwt.getClaim("customerId");

        return loanService.getLoansByCustomer(customerId);
    }
}
